
compilationUnit(u) ::= <<package program;
public class MainProgram {
  public static void Main(String[] args) {
    System.out.println("Hello World");
    <statements(u.statements)>
  }      
}
>>

statements(s) ::= <<<s:statement(); separator="\r\n"> >>

statement(s) ::= "<if(s.kind.print)><print(s)><endif>"

print(p) ::= "print <expressions(p.expressions)>"

expressions(e) ::= <<<e:expression(); separator=" "> >>

expression(e) ::= <%
<if(e.kind.addition)><addition(e)><endif>
<if(e.kind.division)><division(e)><endif>
<if(e.kind.multiplication)><multiplication(e)><endif>
<if(e.kind.subtraction)><subtraction(e)><endif>

<if(e.kind.booleanLiteral)><booleanLiteral(e)><endif>
<if(e.kind.character)><characterLiteral(e)><endif>
<if(e.kind.floatLiteral)><floatLiteral(e)><endif>
<if(e.kind.integerLiteral)><integerLiteral(e)><endif>
<if(e.kind.nullLiteral)><nullLiteral(e)><endif>
<if(e.kind.stringLiteral)><stringLiteral(e)><endif>
%>

addition(e)        ::= "<expression(e.left)> + <expression(e.right)>"
division(e)        ::= "<expression(e.left)> / <expression(e.right)>"
multiplication(e)  ::= "<expression(e.left)> * <expression(e.right)>"
subtraction(e)     ::= "<expression(e.left)> - <expression(e.right)>"

booleanLiteral(e)  ::= "<e.value>"
characteriteral(e) ::= "<e.value>"
floatLiteral(e)    ::= "<e.value>"
integerLiteral(e)  ::= "<e.value>"
nullLiteral(e)     ::= "<e.value>"
stringLiteral(e)   ::= "<e.value>"





